<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="patternController" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameOfLife.EditorController">
   <left>
      <VBox prefHeight="371.0" prefWidth="198.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="129.0" text="Meta Data">
                     <font>
                        <Font name="Arial Bold" size="19.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <TextField fx:id="titleTextField" prefHeight="27.0" prefWidth="157.0" promptText="Title">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="authorTextField" promptText="Author">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="descriptionTextField" promptText="Description">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="rulesTextField" promptText="Rules">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <TextField promptText="Placement">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#handleSaveButton" text="Save Pattern">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleCloseButton" text="Close">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial Bold" size="15.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="patternCanvas" height="395.0" onMouseClicked="#handleMouseClick" width="602.0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <VBox prefHeight="130.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fitToHeight="true" minHeight="150.0" minWidth="800.0" pannable="false" prefViewportWidth="800.0" vbarPolicy="NEVER" vmax="0.0">
               <content>
                  <Canvas fx:id="strip" height="132.0" width="7000.0" />
               </content>
            </ScrollPane>
            <Button onAction="#updateStrip" text="Update Strip" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
